{
  "env": {
    "browser": true,  // 브라우저 환경을 위한 설정
    "es6": true,      // ES6 문법을 사용하기 위한 설정
    "node": true      // Node.js 환경을 위한 설정
  },
  "extends": [
    "eslint:recommended",      // 기본 ESLint 권장 규칙
    "plugin:react/recommended" // React 관련 추천 규칙
  ],
  "parser": "babel-eslint",    // Babel을 사용하는 경우
  "parserOptions": {
    "ecmaVersion": 2020,       // ECMAScript 2020 버전
    "sourceType": "module",    // ES 모듈 사용
    "ecmaFeatures": {
      "jsx": true               // JSX 사용 설정
    }
  },
  "plugins": [
    "react"                   // React 플러그인 추가
  ],
  "rules": {
    "no-unused-vars": "warn", // 사용되지 않는 변수에 대해 경고
    "no-console": "off",      // console.log 사용 허용
    "quotes": ["error", "double"], // 문자열은 큰 따옴표로 작성
    "react/jsx-no-comment-textnodes": "off", // JSX 내 주석 관련 경고 무시
    "react/prop-types": "off" // PropTypes 사용 강제하지 않음
  },
  "settings": {
    "react": {
      "version": "detect" // React의 버전을 자동으로 감지
    }
  }
}
